<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/runningFragment">

    <fragment
        android:id="@+id/runningFragment"
        android:name="com.io.vastra.running.RunningFragment"
        android:label="Running" >
        <action
            android:id="@+id/action_runningFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.io.vastra.history.HistoryFragment"
        android:label="History" >
        <action
            android:id="@+id/action_historyFragment_to_runningFragment"
            app:destination="@id/runningFragment" />
    </fragment>
</navigation>